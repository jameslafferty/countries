{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../src",
    "outDir": "../dist",
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "allowJs": false,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "../src/*.ts"
  ],
  "exclude": [
    "../dist/*",
    "../node_module/*",
    "../src/*.test.ts"
  ]
}